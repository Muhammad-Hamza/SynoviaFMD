<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScanApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>

        <style name="loginFieldStyle">
            <item name="android:background">@drawable/ic_login_field</item>
            <item name="android:fontFamily">@font/metropolis_regular</item>
            <item name="android:gravity">center</item>
            <item name="android:maxLines">1</item>
            <item name="android:textColor">@color/colorTextGrey</item>
            <item name="android:textSize">@dimen/_11sdp</item>
        </style>

        <style name="redButtonStyle">
            <item name="android:padding">@dimen/_5sdp</item>
            <item name="android:textSize">@dimen/_12sdp</item>
            <item name="android:textColor">@color/colorWhite</item>
            <item name="android:fontFamily">@font/metropolis_medium</item>
        </style>

        <style name="customProgressBar" parent="@style/Theme.AppCompat">
            <item name="android:indeterminateTint">@color/colorRed</item>
        </style>

        <style name="mainHeading">
            <item name="android:textSize">@dimen/_14sdp</item>
            <item name="android:fontFamily">@font/metropolis_bold</item>
            <item name="android:gravity">center</item>
            <item name="android:textColor">@color/colorBlack</item>
        </style>

        <style name="subHeadingNormal">
            <item name="android:textSize">@dimen/_11sdp</item>
            <item name="android:fontFamily">@font/metropolis_medium</item>
            <item name="android:gravity">center</item>
            <item name="android:textColor">@color/colorTextGreyDark</item>
        </style>

        <style name="navSmallTextStyle">
            <item name="android:textSize">@dimen/_8sdp</item>
            <item name="android:fontFamily">@font/metropolis_regular</item>
            <item name="android:gravity">center</item>
            <item name="android:textColor">@color/colorTextGreyLittleDark</item>
        </style>

        <style name="styleHomeAttributeTextView">
            <item name="android:textSize">@dimen/_9sdp</item>
            <item name="android:maxLines">1</item>
            <item name="android:ellipsize">end</item>
            <item name="android:textColor">@color/colorAttributeGrey</item>
            <item name="android:fontFamily">@font/metropolis_medium</item>
        </style>

        <style name="styleViewMoreBlue">
            <item name="android:paddingTop">@dimen/_2sdp</item>
            <item name="android:paddingBottom">@dimen/_2sdp</item>
            <item name="android:paddingLeft">@dimen/_20sdp</item>
            <item name="android:paddingStart">@dimen/_20sdp</item>
            <item name="android:paddingRight">@dimen/_20sdp</item>
            <item name="android:paddingEnd">@dimen/_20sdp</item>
            <item name="android:textSize">@dimen/_11sdp</item>
            <item name="android:textColor">@color/colorWhite</item>
            <item name="android:fontFamily">@font/metropolis_medium</item>
        </style>

        <style name="styleWhiteAttribute">
            <item name="android:maxLines">1</item>
            <item name="android:ellipsize">end</item>
            <item name="android:textSize">@dimen/_11sdp</item>
            <item name="android:textColor">@color/colorWhite</item>
            <item name="android:fontFamily">@font/metropolis_bold</item>
        </style>

        <style name="styleGradientAttribute">
            <item name="android:maxLines">1</item>
            <item name="android:ellipsize">end</item>
            <item name="android:textSize">@dimen/_10sdp</item>
            <item name="android:fontFamily">@font/metropolis_bold</item>
        </style>

        <style name="spinner_style" parent="@style/Widget.AppCompat.Spinner">
            <item name="overlapAnchor">true</item>
        </style>

        <style name="navIconImageViewStyle">
            <item name="android:layout_width">@dimen/_14sdp</item>
            <item name="android:layout_height">@dimen/_14sdp</item>
            <item name="android:layout_marginStart">@dimen/_15sdp</item>
            <item name="android:layout_marginLeft">@dimen/_15sdp</item>
            <item name="android:layout_marginRight">@dimen/_5sdp</item>
            <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        </style>

        <style name="navMenuTextViewStyle" parent="Widget.AppCompat.TextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginStart">@dimen/_10sdp</item>
            <item name="android:layout_marginLeft">@dimen/_10sdp</item>
            <item name="android:fontFamily">@font/metropolis_bold</item>
            <item name="android:textColor">@color/colorBlack</item>
            <item name="android:ellipsize">end</item>
            <item name="android:maxLines">1</item>
            <item name="android:textSize">@dimen/_9sdp</item>
        </style>

        <style name="styleHistoryTextView" parent="Widget.AppCompat.TextView">
            <item name="android:fontFamily">@font/metropolis_medium</item>
            <item name="android:textColor">@color/colorBlack</item>
            <item name="android:layout_marginTop">@dimen/_3sdp</item>
            <item name="android:textSize">@dimen/_10sdp</item>
        </style>

        <style name="cardViewHistory" parent="CardView">
            <item name="android:background">@color/colorWhite</item>
            <item name="cardElevation">@dimen/_5sdp</item>
            <item name="cardMaxElevation">@dimen/_2sdp</item>
            <item name="cardUseCompatPadding">true</item>
        </style>
        <style name="textViewHistory" parent="Widget.AppCompat.TextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginStart">@dimen/_12sdp</item>
            <item name="android:layout_marginLeft">@dimen/_12sdp</item>
            <item name="android:layout_marginTop">@dimen/_4sdp</item>
            <item name="android:layout_marginEnd">@dimen/_12sdp</item>
            <item name="android:layout_marginRight">@dimen/_12sdp</item>
            <item name="android:layout_marginBottom">@dimen/_4sdp</item>
            <item name="android:fontFamily">@font/metropolis_medium</item>
            <item name="android:textColor">@color/colorTextDarkGrey</item>
            <item name="android:textSize">@dimen/_11sdp</item>
        </style>
</resources>